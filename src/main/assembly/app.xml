<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>app</id>
    <formats>
      <format>tar.gz</format>
    </formats>
    <dependencySets>
      <dependencySet>
        <useProjectArtifact>true</useProjectArtifact>
        <outputDirectory>lib</outputDirectory>
        <unpack>false</unpack>
      </dependencySet>
    </dependencySets>
    <files>
      <file>
        <source>src/main/scripts/env.sh</source>
        <outputDirectory>bin</outputDirectory>
        <fileMode>0755</fileMode>
      </file>
<!--
      <file>
        <source>target/app</source>
        <outputDirectory>bin</outputDirectory>
        <fileMode>0755</fileMode>
      </file>
-->
    </files>
    <fileSets>
      <fileSet>
        <directory>${project.build.directory}/bin</directory>
        <outputDirectory>bin</outputDirectory>
        <fileMode>0755</fileMode>
<!--
        <filtered>true</filtered>
        <includes>
          <include>syslog.*</include>
          <include>snmp.*</include>
        </includes>
        <excludes>
          <exclude>syslog.event.properties</exclude>
        </excludes>
-->
      </fileSet>
      <fileSet>
        <directory>${project.build.directory}/log</directory>
        <outputDirectory>log</outputDirectory>
        <fileMode>0755</fileMode>
      </fileSet>
      <fileSet>
        <directory>${project.build.directory}/etc</directory>
        <outputDirectory>etc</outputDirectory>
        <fileMode>0755</fileMode>
      </fileSet>
    </fileSets>
</assembly>

